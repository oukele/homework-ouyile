<?xml version="1.0" encoding="utf-8" ?>

<decorators defaultdir="/layout/">
    <!-- 先定义不过滤的页面，即排除页面 -->
    <excludes>
        <pattern>/assets/*</pattern>
        <pattern>/html/*</pattern>
    </excludes>

    <!-- 定义需要修饰的页面 -->
    <decorator name="iphone" page="iphone_main.jsp">
        <pattern>/*</pattern>
    </decorator>

    <decorator name="cart" page="cart_tpl.jsp">
        <pattern>/cart/*</pattern>
    </decorator>

</decorators>